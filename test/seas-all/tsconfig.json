{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "seas-all-test/src/**/*.ts",
    "seas-all-test/src/**/*.d.ts",
    "seas-all-test/src/**/*.tsx",
    "seas-all-test/src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json"}]
}
